public void setDataCompra(String dataCompra) throws ParseException {
        SimpleDateFormat formato = new SimpleDateFormat("dd/MM/yyyy");
        Date dataCompraFormatada = formato.parse(dataCompra);
        this.dataCompra = dataCompraFormatada;
    }

    public void setValidadeCartao(String validadeCartao) throws ParseException {
        SimpleDateFormat formato = new SimpleDateFormat("MM/yyyy");
        Date validadeFormatada = formato.parse(validadeCartao);
        this.validadeCartao = validadeFormatada;
    }

    public void setNumeroCartao(String numeroCartao) {
        String ultimosDigitos = numeroCartao.substring(numeroCartao.length() - 4);
        this.numeroCartao = ultimosDigitos;
    }

    public String getNumeroCartao() {
        String ultimosDigitos = numeroCartao.substring(numeroCartao.length() - 4);
        return ultimosDigitos;
    }
